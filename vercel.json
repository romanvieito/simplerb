{
  "crons": [
    {
      "path": "/api/cron/dailyEmails",
      "schedule": "0 15 * * *"
    },
    {
      "path": "/api/cron/processPendingEmails",
      "schedule": "10-59/2 15,16-20 * * *"
    },
    {
      "path": "/api/cron/friendEmails",
      "schedule": "0 16 */3 * *"
    },
    {
      "path": "/api/cron/refreshGmailToken",
      "schedule": "0 0 */5 * *"
    }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "(?<subdomain>[^.]+)\\.simplerb\\.com"
        }
      ],
      "permanent": false,
      "destination": "https://simplerb.com/api/serve-site?subdomain=:subdomain"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "(?<subdomain>[^.]+)\\.simplerb\\.com"
        }
      ],
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        }
      ]
    }
  ]
} 